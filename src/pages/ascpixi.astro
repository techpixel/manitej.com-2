<script>
    window.onload = () => {
        // hide all images except the first one
        for (let i = 2; i <= 11; i++) {
            const img = document.querySelector(`.img-${i}`) as HTMLImageElement;
            if (!img) continue;
            img.style.display = "none";
        }

        // detect mouse movement
        document.addEventListener("mousemove", (e) => {
            const y = e.clientY;

            // calculate which image to show based on mouse Y position
            const windowHeight = window.innerHeight;
            const numImages = 11;
            const segmentHeight = windowHeight / numImages;
            const index = Math.min(
                Math.floor(y / segmentHeight),
                numImages - 1,
            );
            for (let i = 1; i <= numImages; i++) {
                const img = document.querySelector(`.img-${i}`) as HTMLImageElement;
                if (!img) continue;
                if (i - 1 === index) {
                    img.style.display = "block";
                } else {
                    img.style.display = "none";
                }
            }
        });
    };
</script>

<style>
    html, body {
        margin: 0;
        padding: 0;
        overflow: hidden;
        height: 100%;
        width: 100%;
    }

    img {
        width: 100%;
        height: 100%;
    }
</style>